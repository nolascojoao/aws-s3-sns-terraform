{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "s3.amazonaws.com"
        },
        "Action": "SNS:Publish",
        "Resource": "${aws_sns_topic.sns_topic.arn}",
        "Condition": {
          "ArnLike": {
            "aws:SourceArn": "${aws_s3_bucket.bucket.arn}"
          }
        }
      }
    ]
  }
  